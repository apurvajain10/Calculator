<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/calci"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn9"
        android:background="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="13dp"
        android:text="9"
        android:outlineSpotShadowColor="@android:color/black"
        />
    <Button
        android:id="@+id/btn8"
        android:background="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn9"
        android:layout_alignBottom="@+id/btn9"
        android:layout_toRightOf="@+id/btn9"
        android:layout_toEndOf="@+id/btn9"
        android:text="8"
        android:outlineSpotShadowColor="@android:color/black"/>




    <Button
        android:id="@+id/btn7"
        android:background="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn8"
        android:layout_alignBottom="@+id/btn8"
        android:layout_toRightOf="@+id/btn8"
        android:layout_toEndOf="@+id/btn8"
        android:text="7"
        android:outlineSpotShadowColor="@android:color/black"/>

    <Button
        android:id="@+id/btn6"
        android:background="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn9"
        android:layout_alignStart="@+id/btn9"
        android:layout_below="@+id/btn9"
        android:layout_marginTop="12dp"
        android:text="6"
        android:outlineSpotShadowColor="@android:color/black"/>

    <Button
        android:id="@+id/btn5"
        android:background="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn8"
        android:layout_alignStart="@+id/btn8"
        android:layout_alignTop="@+id/btn6"
        android:text="5"
        android:outlineSpotShadowColor="@android:color/black"/>

    <Button
        android:id="@+id/btn4"
        android:background="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn7"
        android:layout_alignStart="@+id/btn7"
        android:layout_alignTop="@+id/btn5"
        android:text="4"
        android:outlineSpotShadowColor="@android:color/black"/>

    <Button
        android:id="@+id/btn3"
        android:background="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn6"
        android:layout_alignStart="@+id/btn6"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/btn6"
        android:text="3"
        android:outlineSpotShadowColor="@android:color/black"/>

    <Button
        android:id="@+id/btn2"
        android:background="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn5"
        android:layout_alignStart="@+id/btn5"
        android:layout_alignTop="@+id/btn3"
        android:text="2"
        android:outlineSpotShadowColor="@android:color/black"/>

    <Button
        android:id="@+id/btn1"
        android:background="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn4"
        android:layout_alignStart="@+id/btn4"
        android:layout_alignTop="@+id/btn2"
        android:text="1"
        android:outlineSpotShadowColor="@android:color/black"/>

    <Button
        android:id="@+id/btnclr"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn3"
        android:layout_alignStart="@+id/btn3"
        android:layout_below="@+id/btn3"
        android:layout_marginTop="13dp"
        android:text="clear"
        android:background="@color/black"
        android:textColor="@color/white"

        android:outlineSpotShadowColor="@android:color/black"/>

    <Button
        android:id="@+id/btn0"
        android:background="@color/blue"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn2"
        android:layout_alignStart="@+id/btn2"
        android:layout_alignTop="@+id/btnclr"
        android:text="0"

        />


    <Button
        android:id="@+id/btneql"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn0"
        android:layout_alignLeft="@+id/btn1"
        android:layout_alignStart="@+id/btn1"
        android:text="="
        android:background="@color/blue"/>
    <Button
        android:id="@+id/btndiv"
        android:background="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:layout_toRightOf="@+id/btn7"
        android:text="/" />

    <Button
        android:id="@+id/btnmul"
        android:background="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn4"
        android:layout_toEndOf="@+id/btn4"
        android:layout_toRightOf="@+id/btn4"
        android:text="*" />
    <Button
        android:id="@+id/btnadd"
        android:background="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn1"
        android:layout_alignBottom="@+id/btn1"
        android:layout_toEndOf="@+id/btn1"
        android:layout_toRightOf="@+id/btn1"
        android:text="+" />

    <Button
        android:id="@+id/btnsub"
        android:background="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btneql"
        android:layout_alignBottom="@+id/btneql"
        android:layout_toEndOf="@+id/btneql"
        android:layout_toRightOf="@+id/btneql"
        android:text="-" />

    <TextView
        android:id="@+id/tvContol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btndiv"
        android:layout_alignEnd="@+id/btndiv"
        android:layout_alignLeft="@+id/btn9"
        android:textSize="18sp"
        android:layout_alignRight="@+id/btndiv"
        android:layout_alignStart="@+id/btn9"
        android:layout_marginBottom="39dp"
        android:layout_toEndOf="@+id/btn7"
        android:textStyle="bold"
        android:textSelectHandleRight="@color/black"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tvDisplay"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvContol"
        android:layout_alignEnd="@+id/tvContol"
        android:layout_alignLeft="@+id/btn9"
        android:textSize="20sp"
        android:layout_alignRight="@+id/tvContol"
        android:layout_alignStart="@+id/btn9"
        android:layout_marginBottom="39dp"
        android:textColor="@color/black"
        android:textSelectHandleRight="@color/black"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</RelativeLayout>